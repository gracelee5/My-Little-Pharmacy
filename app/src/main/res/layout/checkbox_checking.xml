<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckboxChecking"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" "
                android:textSize="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="건강 고민을 선택해주세요."
                android:textColor="#4670D1"
                android:textStyle="bold"
                android:textSize="30dp"
                android:layout_margin="3dp"/>

            <CheckBox
                android:id="@+id/worry1"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:text=" 피부"
                android:textSize="20dp"
                android:layout_margin="3dp"/>

            <CheckBox
                android:id="@+id/worry2"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:text=" 눈"
                android:textSize="20dp"
                android:layout_margin="3dp"/>
            <CheckBox
                android:id="@+id/worry3"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:text=" 간 건강"
                android:textSize="20dp"
                android:layout_margin="3dp"/>

            <CheckBox
                android:id="@+id/worry4"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:text=" 뼈"
                android:textSize="20dp"
                android:layout_margin="3dp"/>

            <CheckBox
                android:id="@+id/worry5"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:text=" 스트레스"
                android:textSize="20dp"
                android:layout_margin="3dp"/>

            <CheckBox
                android:id="@+id/worry6"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:text=" 피로"
                android:textSize="20dp"
                android:layout_margin="3dp"/>

            <CheckBox
                android:id="@+id/worry7"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:text=" 면역력"
                android:textSize="20dp"
                android:layout_margin="3dp"/>

            <CheckBox
                android:id="@+id/worry8"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:text=" 종합"
                android:textSize="20dp"
                android:layout_margin="3dp"/>


        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:text="다 음 으 로"
        android:textStyle="bold"
        android:textSize="22dp"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>